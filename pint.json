{
  "preset": "psr12",
  "rules": {
    "ordered_imports": {
      "sort_algorithm": "alpha",
      "imports_order": [
        "class",
        "function",
        "const"
      ]
    },
    "phpdoc_order": true,
    "array_syntax": {
      "syntax": "short"
    },
    "strict_comparison": true,
    "strict_param": true,
    "no_trailing_whitespace": false,
    "no_trailing_whitespace_in_comment": false,
    "braces": false,
    "single_blank_line_at_eof": false,
    "blank_line_after_namespace": false
  }
}
